<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress_bar_pie_chart"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/pie_chart_stats"
        app:layout_constraintEnd_toEndOf="@+id/pie_chart_stats"
        app:layout_constraintStart_toStartOf="@+id/pie_chart_stats"
        app:layout_constraintTop_toTopOf="@+id/pie_chart_stats" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart_stats"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.github.mikephil.charting.charts.PieChart>
</androidx.constraintlayout.widget.ConstraintLayout>
